<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.dit.lab8.MainActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row1"
            android:text="@string/row1"
            android:layout_alignParentTop="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/taskName"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/row3"
            android:layout_toEndOf="@+id/row3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row2"
            android:text="@string/row2"
            android:layout_above="@+id/completeStatus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/taskDesc"
            android:layout_alignBottom="@+id/row2"
            android:layout_alignRight="@+id/taskName"
            android:layout_alignEnd="@+id/taskName"
            android:layout_alignLeft="@+id/taskName"
            android:layout_alignStart="@+id/taskName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row3"
            android:text="@string/row3"
            android:layout_marginTop="149dp"
            android:layout_below="@+id/taskName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/completeStatus"
            android:layout_alignBottom="@+id/row3"
            android:layout_alignRight="@+id/taskDesc"
            android:layout_alignEnd="@+id/taskDesc"
            android:layout_toRightOf="@+id/row3"
            android:layout_toEndOf="@+id/row3"
            android:inputType="number"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addRow"
            android:text="Submit"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/row3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Tasks"
        android:id="@+id/showTasks"
        android:layout_below="@+id/addRow"
        android:layout_alignRight="@+id/completeStatus"
        android:layout_alignEnd="@+id/completeStatus"
        android:layout_alignLeft="@+id/addRow"
        android:layout_alignStart="@+id/addRow" />


</RelativeLayout>
