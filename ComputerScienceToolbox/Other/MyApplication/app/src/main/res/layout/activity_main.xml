<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pauljredmond.myapplication.MainActivity">

    <TextView
        android:text="Surname: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblSurname"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignEnd="@+id/lblPassword" />

    <TextView
        android:text="Password: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/lblPassword"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Number: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/lblPhone"
        android:layout_below="@+id/txtPassword"
        android:layout_alignEnd="@+id/lblPassword" />

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/lblEmailAddress"
        android:layout_below="@+id/txtPhone"
        android:layout_alignEnd="@+id/lblPhone" />

    <TextView
        android:text="County: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_alignEnd="@+id/lblEmailAddress"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:layout_alignBaseline="@+id/lblEmailAddress"
        android:layout_alignBottom="@+id/lblEmailAddress"
        android:layout_toEndOf="@+id/lblEmailAddress"
        android:inputType="textWebEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:ems="10"
        android:id="@+id/txtPhone"
        android:layout_alignBaseline="@+id/lblPhone"
        android:layout_alignBottom="@+id/lblPhone"
        android:layout_toEndOf="@+id/lblPhone"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="Password"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/lblPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:text="Surname"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lblSurname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="County"
        android:ems="10"
        android:layout_below="@+id/txtEmail"
        android:layout_alignEnd="@+id/txtEmail"
        android:id="@+id/txtCounty" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Edit me"
        android:ems="10"
        android:layout_below="@+id/txtCounty"
        android:layout_alignEnd="@+id/txtCounty"
        android:layout_marginTop="54dp"
        android:id="@+id/editText2" />

</RelativeLayout>
