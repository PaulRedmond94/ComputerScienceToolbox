<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pauljredmond.computersciencetoolbox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumberBaseConvertor"
            android:label="@string/title_activity_number_base_convertor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NumberBaseCalculator"
            android:label="@string/title_activity_number_base_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AsciiTable"
            android:label="@string/title_activity_ascii_table"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BinaryTextConvertor"
            android:label="@string/title_activity_binary_text_convertor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ShowFullAsciiTable" />
        <activity
            android:name=".ChangeAsciiTable"
            android:label="@string/title_activity_change_ascii_table"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>